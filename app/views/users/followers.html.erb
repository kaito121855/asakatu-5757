<%# ヘッダー %>
<header>
  <%# 戻るボタン %>
  <div class="header-back header-item">
    <%= link_to "＜", user_path(@user.id), class: "header-back-btn" %>
  </div>
  <%# タイトル %>
  <div class="header-title header-item">
    <p class="header-title-item">フォロワー一覧</p>
  </div>
  <%# 空欄 %>
  <div class="header-content header-item">
  </div>
</header>

<%# フォロワー一覧 %>
<div class="follows">
  <div class="follow-content">
    <% @users.each do |user| %>
      <div class="follow-user-content">
        <%# ユーザーアイコン %>
        <% if user.image.attached? %>
          <%= link_to image_tag(user.image, class: "user-image"), user_path(user.id) %>
        <% else %>
          <%= link_to image_tag('user.png', class: "user-image"), user_path(user.id) %>
        <% end %>
        <%# ユーザー名 %>
        <%= link_to user.nickname, user_path(user.id), method: :get, class: "user-nickname" %>
      </div>
    <% end %>
  </div>
</div>